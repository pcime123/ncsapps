<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White_EA"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/Bar_bed_config"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#35353C"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="병상 목록"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_home"
                        android:drawableStart="@drawable/ic_add_circle_20dp"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="추가"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/btn_del"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_home"
                        android:drawableStart="@drawable/ic_delete_24dp"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="삭제"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_prev"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_home"
                        android:drawableStart="@drawable/ic_prev_24dp"
                        android:drawablePadding="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="이전"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="53dp"
                android:orientation="vertical"
                android:background="@color/WhiteSmoke"
                app:layout_constraintTop_toBottomOf="@id/Bar_bed_config">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/list_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.08"
                        android:layout_marginStart="10dp"
                        android:button="@drawable/checkbox" />

                    <Button
                        android:id="@+id/sort_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="16sp"
                        android:text="번호"
                        android:textColor="@color/DeepGray" />

                    <Button
                        android:id="@+id/sort_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="16sp"
                        android:text="모델명"
                        android:textColor="@color/DeepGray" />

                    <Button
                        android:id="@+id/sort_ward"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:background="@color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="16sp"
                        android:text="병동"


                        android:textColor="@color/DeepGray" />

                    <Button
                        android:id="@+id/sort_room"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:background="@color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="16sp"
                        android:text="병실"

                        android:textColor="@color/DeepGray" />

                    <Button
                        android:id="@+id/sort_bed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:background="@color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_24dp"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp"
                        android:textSize="16sp"
                        android:text="병상"

                        android:textColor="@color/DeepGray" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="#838383" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bed_config_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>



</layout>