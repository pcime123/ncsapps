<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White_EA">

        <LinearLayout
            android:id="@+id/bar_settings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#434450"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:text="설정"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_layout_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="2dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/bar_settings">

            <TextView
                android:id="@+id/settings_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanum_bold"
                android:text="네트워크"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/settings_network"
                >

                <Button
                    android:id="@+id/btn_ethernet"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_explicit_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="이더넷"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_wifi"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_wifi_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Wi-Fi"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_layout_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/settings_layout_network">

            <TextView
                android:id="@+id/settings_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanum_bold"
                android:text="기기"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <LinearLayout
                android:id="@+id/settings_device_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/settings_device"
                >

                <Button
                    android:id="@+id/btn_account"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_account_circle_black_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="SIP 계정"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_display"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_desktop_windows_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="디스플레이"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/settings_device_1"
                />

            <LinearLayout
                android:id="@+id/settings_device_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/settings_device_1"
                >

                <Button
                    android:id="@+id/btn_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_info_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="기기 정보"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_backup"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_backup_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="간편 복구"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/settings_device_2"
                />

            <LinearLayout
                android:id="@+id/settings_device_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/settings_device_2"
                >

                <Button
                    android:id="@+id/btn_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_access_time_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="날짜 및 시간"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_volume"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_volume_up_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="음량 설정"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_layout_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/settings_layout_device">

            <TextView
                android:id="@+id/settings_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanum_bold"
                android:text="관리자"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <LinearLayout
                android:id="@+id/layout_admin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/settings_admin"
                >

                <Button
                    android:id="@+id/btn_admin_account"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="관리자 계정 관리"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_admin_setup"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_settings_20dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="상세 설정"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>