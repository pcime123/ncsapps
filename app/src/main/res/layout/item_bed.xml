<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bedCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/bedColor"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@color/JBlue">

            <TextView
                android:id="@+id/room_num"
                style="@style/title_configuration_big"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1011"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="75dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <CheckBox
                    android:id="@+id/bed_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:button="@drawable/checkbox"
                    android:clickable="false"
                    android:contentDescription="Detail"
                    android:padding="5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bed_num"
                    style="@style/title_configuration_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Bed 1"
                    android:textColor="@color/Brown_high"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="번호"
                    android:textColor="@color/Brown_high"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bed_addr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2012"
                    android:textColor="@color/Brown_high"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="장비"
                    android:textColor="@color/Brown_high"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bed_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="간호사 호출기"
                    android:textColor="@color/Brown_high"

                    android:textSize="14sp" />
            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content">-->

            <!--                <TextView-->
            <!--                                    android:layout_width="100dp"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:text="Leave"-->
            <!--                    android:textStyle="bold"-->
            <!--                    android:textSize="14sp"-->
            <!--                    android:textColor="@color/Brown_high" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/bed_leave"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:text="2020-03-19"-->
            <!--                    android:textSize="14sp"-->

            <!--                    android:textColor="@color/Brown_high" />-->
            <!--            </LinearLayout>-->


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>