<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="90dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/emergency_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.BedButtonRipple"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:focusable="true">

<!--        <FrameLayout-->
<!--            android:id="@+id/emergency_color"-->
<!--            android:layout_width="15dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="#3e6e76">-->

<!--        </FrameLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:background="#efbf49"
            android:paddingEnd="15dp"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/emergency_room"
                    style="@style/title_configuration_big"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="301"
                    android:textColor="@color/Brown_high"
                    android:textSize="22sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/emergency_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="위급 호출 발생"
                    android:textColor="#b64342"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>