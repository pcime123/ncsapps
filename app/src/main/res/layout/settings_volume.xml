<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/layout_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM ALARM"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/bar_alarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/layout_dtmf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_alarm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STREAM DTMF"
            android:textSize="30sp" />

        <SeekBar
            android:id="@+id/bar_dtmf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_dtmf">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM MUSIC"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/bar_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_music">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM NOTI"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/bar_noti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_noti">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM RING"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/bar_ring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_ring">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM SYSTEM"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/bar_system"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_system">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STREAM VOICE"
                android:textSize="30sp" />

            <SeekBar
                android:id="@+id/bar_voice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>