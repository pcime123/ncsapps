<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C9000000"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="175dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/back_missed_call"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="번호 :"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/miss_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="장소 : "
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/miss_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101호 1번 병상"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/dialog_missed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부재중인 호출이 있습니다. 확인해주세요."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="onMove"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_gray_radius0"
            android:text="이동" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>