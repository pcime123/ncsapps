<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seeeyes="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <com.sscctv.nursecallapp.ui.utils.SwitchSetting
            android:id="@+id/pref_device_ringtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Use device ringtone" />

<!--        <com.sscctv.nursecallapp.ui.utils.SwitchSetting-->
<!--            android:id="@+id/pref_vibrate_on_incoming_calls"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            seeeyes:title="@string/pref_vibrate_on_incoming_calls" />-->

        <com.sscctv.nursecallapp.ui.utils.BasicSetting
            android:id="@+id/pref_grant_read_dnd_settings_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Do Not Disturb settings"
            seeeyes:subtitle="We need you to grant use the access to the Do Not Disturb settings to correctly ring or not depending on the current policy"/>

        <com.sscctv.nursecallapp.ui.utils.ListSetting
            android:id="@+id/pref_media_encryption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Media encryption" />

        <com.sscctv.nursecallapp.ui.utils.SwitchSetting
            android:id="@+id/pref_media_encryption_mandatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Media encryption mandatory" />

        <com.sscctv.nursecallapp.ui.utils.SwitchSetting
            android:id="@+id/pref_sipinfo_dtmf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Send out-band DTMFs (SIP INFO)" />

        <com.sscctv.nursecallapp.ui.utils.SwitchSetting
            android:id="@+id/pref_rfc2833_dtmf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Send In-band DTMFs (SIP INFO)" />

<!--        <com.sscctv.nursecallapp.ui.utils.BasicSetting-->
<!--            android:id="@+id/pref_android_app_notif_settings"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            seeeyes:title="Android notification settings"/>-->

        <com.sscctv.nursecallapp.ui.utils.SwitchSetting
            android:id="@+id/pref_auto_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:title="Auto answer incoming calls" />

        <com.sscctv.nursecallapp.ui.utils.TextSetting
            android:id="@+id/pref_auto_answer_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:hint="Auto answer time (in milliseconds)"
            seeeyes:title="Auto answer time (in milliseconds)" />

        <com.sscctv.nursecallapp.ui.utils.TextSetting
            android:id="@+id/pref_incoming_call_timeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:hint="Incoming call hangup (in seconds)"
            seeeyes:title="Incoming call hangup (in seconds)" />

        <com.sscctv.nursecallapp.ui.utils.TextSetting
            android:id="@+id/pref_voice_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            seeeyes:hint="Voice mail URI"
            seeeyes:title="Voice mail URI" />

    </LinearLayout>

</ScrollView>