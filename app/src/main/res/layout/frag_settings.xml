<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White_EA"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/bar_settings"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#424246"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:text="설정"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_layout_network"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/bar_settings">

            <TextView
                android:id="@+id/settings_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanum_bold"
                android:text="네트워크"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/settings_network">

                <Button
                    android:id="@+id/btn_ethernet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_explicit_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="이더넷"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_wifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_wifi_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Wi-Fi"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_layout_device"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_layout_network">

            <TextView
                android:id="@+id/settings_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanum_bold"
                android:text="기기"

                android:textColor="@color/main"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/settings_device_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/settings_device">

                <Button
                    android:id="@+id/btn_account"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_account_circle_black_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="SIP 계정"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <Button
                    android:id="@+id/btn_audio"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_volume_up_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="음량 설정"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_display"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_desktop_windows_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="디스플레이"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_access_time_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="날짜 및 시간"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_backup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_backup_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="간편 복구"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_info"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_info_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="기기 정보"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_layout_admin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_layout_device">

            <TextView
                android:id="@+id/settings_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanum_bold"
                android:text="관리자"

                android:textColor="@color/main"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@id/settings_admin">

                <Button
                    android:id="@+id/btn_admin_account"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="관리자 계정 관리"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_admin_setup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_home"
                    android:drawableStart="@drawable/ic_settings_20dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="세부 설정"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/child_settings_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="254dp"

            app:layout_constraintStart_toEndOf="@+id/bar_settings"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>