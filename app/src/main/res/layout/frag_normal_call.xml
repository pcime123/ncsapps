<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White_EA"
        android:padding="4dp">


        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/WhiteSmoke"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="일반 호출"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_get_ext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_home"
                android:drawableStart="@drawable/ic_refresh_black_24dp"
                android:drawablePadding="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"

                android:text="주소 연동"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="53dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/WhiteSmoke"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@id/line1">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/JBlue"
                    app:tabIndicatorHeight="4dp"
                    app:tabTextAppearance="@style/tab_text" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/numLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="0.4"
                android:background="@color/WhiteSmoke"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/strNum"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/intNum"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:enabled="false"
                    android:gravity="center|top"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


                <LinearLayout
                    android:id="@+id/_num1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/num1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="1"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/num2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="2"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/num3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="3"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                </LinearLayout>

                <View
                    android:id="@+id/numLine1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/_num1" />

                <LinearLayout
                    android:id="@+id/_num2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/num4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="4"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/num5"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="5"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/num6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="6"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                </LinearLayout>

                <View
                    android:id="@+id/numLine2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/_num2" />

                <LinearLayout
                    android:id="@+id/_num3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/num7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="7"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/num8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="8"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/num9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="9"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                </LinearLayout>

                <View
                    android:id="@+id/numLine3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/gray"
                    app:layout_constraintTop_toBottomOf="@id/_num3" />

                <LinearLayout
                    android:id="@+id/_num4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/btnStar"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="*"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button

                        android:id="@+id/num0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="0"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#C5C5C5" />

                    <Button
                        android:id="@+id/btnShap"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_home"
                        android:text="#"
                        android:textColor="@color/text_darkgray"
                        android:textSize="35sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/_num_btn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    android:layout_marginTop="35dp">

                    <ImageButton
                        android:id="@+id/backspace"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/button_del"
                        android:src="@drawable/ic_backspace_24dp" />

                    <ImageButton
                        android:id="@+id/goCall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:layout_weight="0.7"
                        android:background="@drawable/button_call"
                        android:src="@drawable/ic_call_white" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


