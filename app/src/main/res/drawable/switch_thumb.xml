<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp" />
            <solid android:color="#8F8F8F" /> <!-- custom color - thumb off -->
            <stroke android:width="1dp" android:color="#8F8F8F" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp" />
            <solid android:color="#E04819" /> <!-- custom color - thumb on solid -->
            <stroke android:width="1dp" android:color="#E04819" /> <!-- custom color - thumb on border -->
        </shape>
    </item>
</selector>

