    <item android:state_pressed="true">
        <shape>

            <stroke android:width="1dp" android:color="#F4511E" />
            <corners android:radius="100dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#F86A3D" />

            <corners android:radius="350dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#5E2411" />
            <corners android:radius="100dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#FF6F00"
                android:endColor="#BF360C"
                android:angle="45" />
            <corners android:radius="100dp" />
        </shape>
    </item>
</selector>